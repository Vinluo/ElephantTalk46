---
const today = new Date();
const base = import.meta.env.BASE_URL;
const blogHref = `${base}blog/`;
const aboutHref = `${base}about/`;
const rssHref = `${base}rss.xml`;
---

<footer class="site-footer">
  <div class="footer-inner">
    <div>
      <strong>Elephanttalk46</strong>
      <p>Signal-heavy notes on visuals, interfaces, and experiments.</p>
      <span class="sr-only">Copyright</span>
      <div>&copy; {today.getFullYear()} Elephanttalk46.</div>
    </div>
    <div class="footer-links">
      <a href={blogHref}>Archive</a>
      <a href={aboutHref}>About</a>
      <a href={rssHref}>RSS</a>
    </div>
  </div>
</footer>
